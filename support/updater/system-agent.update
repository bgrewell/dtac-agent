# STOP = Stop Service
# START = Start Service
# KILL = Kill Process
# EXEC = Execute Process
# NOHUP = Execute Process with no hang up
# COPY = Copy File
# MERGE = Merge missing fields into yaml file but don't change existing values

windows:
  STOP dtac-agentd
  COPY dtac-agentd.exe c:\program files\dtac-agent\dtac-agentd.exe
  MERGE config.yaml c:\program files\dtac-agent\config.yaml
  START dtac-agentd

linux:
  STOP dtac-agentd
  COPY dtac-agent /opt/dtac-agent/bin/dtac-agentd
  MERGE config.yaml /etc/dtac-agent/config.yaml
  START dtac-agentd
